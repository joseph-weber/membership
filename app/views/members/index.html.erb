<div class="container">
<nav>
  <div>
    <a href="https://joseph-weber.github.io">My Portfolio</a>
  </div>
</nav>

<p id="notice"><%= notice %></p>
<main>
  <h1>Members</h1>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Password</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= link_to member.username, member %></td>
          <td><%= member.password %></td>
          <td><%= link_to 'Show', member %></td>
          <td><%= link_to 'Edit', edit_member_path(member) %></td>
          <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td> <%= pluralize(member.likes.count, 'like') %> </td>
          <td> <%= button_to '+1', like_member_path(member), method: :post %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>

<br>

<%= link_to 'New Member', new_member_path %>

</div>